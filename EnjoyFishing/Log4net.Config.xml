<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSctionHandler"/>
  </configSections>

  <log4net>
    <!-- ファイル出力用 (日別) -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Log\\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="date" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value='""yyyyMMdd".log"' />
      <Encoding value="UTF-8"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <ConversionPattern value="%date{yy/MM/dd HH:mm:ss,fff} [%-5level] %message - %logger.%method(%line)%newline" />
      </layout>
    </appender>
    
    <!-- コンソール出力用 (VS 上 [出力] ウインドウへの出力) -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="@%-5level>> %message%newline" />
      </layout>
    </appender>    
    
    <root>
      <level value="INFO"/>
      <appender-ref ref="RollingLogFileAppender"/>
      <!--<appender-ref ref="ConsoleAppender"/>-->
    </root>
  </log4net>
</configuration>